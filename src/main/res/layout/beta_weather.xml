<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_5day_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="昨天"
        android:textColor="#ffffff"
        android:textSize="14sp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_5day_weathertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="霾"
        android:textColor="#ccffffff"
        android:textSize="10sp"/>

    <ImageView
        android:id="@+id/iv_5day_weathericon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="5dp"
        android:src="@mipmap/ic_cloud"/>

    <cjh.weatherviewlibarary.WeatherView
        android:id="@+id/weatherView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        app:dotColor="@android:color/white"
        app:dotRadiu="2dp"
        app:highLineColor="@android:color/holo_purple"
        app:lowLineColor="@android:color/darker_gray"
        app:txtColor="@android:color/black"
        app:txtSize="12sp"
        app:txtToBorder="10dp"
        app:txtToDot="3dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_5day_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="良"
        android:textColor="#ffffff"
        android:textSize="14sp"/>

    <!--<ImageView-->
        <!--android:layout_width="18dp"-->
        <!--android:layout_height="3dp"-->
        <!--android:layout_marginTop="6dp"-->
        <!--android:src="@drawable/shape_fine"/>-->

</LinearLayout>